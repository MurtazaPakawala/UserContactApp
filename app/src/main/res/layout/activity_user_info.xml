<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".userInfo">

    <TextView
        android:id="@+id/tvNameHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
       android:textStyle="bold"
        android:text="name will be here" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">
        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:src ="@drawable/phone"

            />
        <TextView
            android:layout_margin="15dp"
            android:padding="20dp"
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            tools:text="name is here phone number"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">
        <ImageView
            android:id="@+id/ivEmail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:src ="@drawable/email"

            />
        <TextView
            android:layout_margin="15dp"
            android:padding="20dp"
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            tools:text="thre wil be email"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7">
        <ImageView
            android:id="@+id/ivAdress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"

            android:src ="@drawable/house"

            />
        <TextView
            android:layout_margin="15dp"
            android:padding="20dp"
            android:id="@+id/tvAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            tools:text="name is adress"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBuisness"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.7"
            android:src ="@drawable/buisness"

            />
        <TextView
            android:layout_margin="15dp"
            android:padding="20dp"
            android:id="@+id/tvBuisness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            tools:text="name is buisness"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>
</LinearLayout>